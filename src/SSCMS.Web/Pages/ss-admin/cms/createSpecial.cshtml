@page
@{ Layout = "_Layout"; }

<el-form :inline="true">
  <el-form-item label="专题路径">
    <el-input v-model="filterText" size="mini" placeholder="输入专题路径进行过滤"></el-input>
  </el-form-item>
</el-form>

<el-checkbox-group v-model="checkedSpecialIds" v-on:change="handleCheckedSpecialsChange">
  <el-checkbox v-for="special in specials" :label="special.id" :key="special.id">{{ getLabel(special) }}</el-checkbox>
</el-checkbox-group>

<div style="height: 10px"></div>
<el-divider></el-divider>
<div style="height: 10px"></div>

<el-form :inline="true" size="small">
  <el-form-item label="">
    <el-checkbox label="全选" v-on:change="selectAll" v-model="isAllChecked"></el-checkbox>
  </el-form-item>
  <el-form-item>
    <el-button
    size="small"
    type="primary"
    :disabled="checkedSpecialIds.length === 0"
    v-on:click="btnCreateClick">
    生 成
  </el-button>
  </el-form-item>
</el-form>

@section Scripts{
<script src="/sitefiles/assets/js/admin/cms/createSpecial.js" type="text/javascript"></script> }
